{
  "name": "@bernankez/theme",
  "type": "module",
  "version": "0.2.0",
  "packageManager": "pnpm@9.4.0",
  "description": "Cole's theme preset",
  "author": "Cole <bernankez@qq.com>",
  "license": "MIT",
  "homepage": "https://github.com/bernankez/theme#readme",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/bernankez/theme.git"
  },
  "bugs": "https://github.com/bernankez/theme/issues",
  "keywords": [],
  "sideEffects": false,
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "require": "./dist/index.cjs",
      "import": "./dist/index.mjs"
    },
    "./css": {
      "types": "./dist/index.d.ts",
      "require": "./dist/css/index.cjs",
      "import": "./dist/css/index.mjs"
    },
    "./theme.css": "./dist/css/theme.module.css"
  },
  "main": "./dist/index.mjs",
  "module": "./dist/index.mjs",
  "types": "./dist/index.d.ts",
  "typesVersions": {
    "*": {
      "*": [
        "./dist/*",
        "./dist/index.d.ts"
      ]
    }
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "preinstall": "npx only-allow pnpm",
    "prepare": "simple-git-hooks",
    "build": "unbuild",
    "dev": "pnpm build && pnpm -C ./playground dev",
    "stub": "unbuild --stub",
    "prepublishOnly": "npm run build",
    "release": "bumpp && pnpm publish --access public",
    "start": "tsx src/index.ts",
    "taze": "taze",
    "test": "vitest run",
    "test:watch": "vitest",
    "typecheck": "tsc --noEmit",
    "lint": "eslint . --fix"
  },
  "devDependencies": {
    "@bernankez/eslint-config": "^0.2.1",
    "@types/fs-extra": "^11.0.1",
    "@types/node": "^18.11.18",
    "bumpp": "^8.2.1",
    "changelogithub": "^0.12.7",
    "eslint": "^8.32.0",
    "fs-extra": "^11.1.0",
    "lint-staged": "^13.1.0",
    "rimraf": "^3.0.2",
    "simple-git-hooks": "^2.8.1",
    "taze": "^0.8.5",
    "tsx": "^3.12.2",
    "typescript": "^4.9.4",
    "unbuild": "^0.8.11",
    "vite": "^4.0.4",
    "vitest": "^0.23.4"
  },
  "simple-git-hooks": {
    "pre-commit": "npx lint-staged"
  },
  "lint-staged": {
    "*": "eslint --fix"
  }
}
