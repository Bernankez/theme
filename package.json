{
  "name": "@bernankez/theme",
  "type": "module",
  "version": "0.3.0",
  "packageManager": "pnpm@9.5.0",
  "description": "Cole's theme preset",
  "author": {
    "name": "Cole",
    "email": "bernankeic@gmail.com",
    "url": "https://github.com/Bernankez"
  },
  "license": "MIT",
  "homepage": "https://github.com/Bernankez/theme#readme",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Bernankez/theme.git"
  },
  "bugs": "https://github.com/Bernankez/theme/issues",
  "keywords": [],
  "sideEffects": false,
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.mjs",
      "require": "./dist/index.cjs"
    },
    "./css/*": "./dist/css/*"
  },
  "main": "./dist/index.mjs",
  "module": "./dist/index.mjs",
  "types": "./dist/index.d.ts",
  "typesVersions": {
    "*": {
      "*": [
        "./dist/*",
        "./dist/index.d.ts"
      ]
    }
  },
  "bin": "./bin/index.js",
  "files": [
    "bin",
    "dist"
  ],
  "scripts": {
    "build": "unbuild",
    "dev": "unbuild --stub",
    "fix": "eslint . -f mo --fix",
    "lint": "eslint . -f mo",
    "prepack": "nr build",
    "prepare": "simple-git-hooks",
    "preview": "node --watch bin/index.js",
    "release": "bumpp && npm publish",
    "start": "tsx src/index.ts",
    "test": "vitest",
    "test:once": "vitest run",
    "typecheck": "tsc --noEmit"
  },
  "dependencies": {
    "@bernankez/theme-generator": "^0.2.0",
    "cac": "^6.7.14"
  },
  "devDependencies": {
    "@antfu/ni": "^0.21.12",
    "@bernankez/eslint-config": "^1.4.0",
    "@types/fs-extra": "^11.0.4",
    "@types/node": "^20.14.10",
    "bumpp": "^9.4.1",
    "eslint": "^9.6.0",
    "eslint-formatter-mo": "^1.2.0",
    "fs-extra": "^11.2.0",
    "lint-staged": "^15.2.7",
    "pathe": "^1.1.2",
    "rimraf": "^6.0.1",
    "simple-git-hooks": "^2.11.1",
    "tsx": "^4.16.2",
    "typescript": "^5.5.3",
    "unbuild": "^2.0.0",
    "vite": "^5.3.3",
    "vitest": "^2.0.2"
  },
  "simple-git-hooks": {
    "pre-commit": "nlx lint-staged"
  },
  "lint-staged": {
    "*": "eslint --fix"
  },
  "publishConfig": {
    "access": "public"
  }
}
